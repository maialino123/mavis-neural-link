{
  "manifest_version": 3,
  "name": "Mavis Neural Link",
  "version": "1.0",
  "description": "Custom Neural Link between Boss and Mavis Assistant.",
  "permissions": ["tabs", "activeTab", "storage", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["*://bot.ecomatehome.com/*", "*://relay.ecomatehome.com/*"]
}
